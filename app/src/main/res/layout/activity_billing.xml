<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewBilling"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutBilling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Display billing statements or amounts here -->
        <TextView
            android:id="@+id/textViewAmountDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_due_50_00"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Payment Button -->
        <Button
            android:id="@+id/buttonPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_now"
            android:enabled="false" /> <!-- Disabled until PaymentIntent is fetched -->

    </LinearLayout>
</ScrollView>
