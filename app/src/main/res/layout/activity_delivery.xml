<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Logo Image -->

    <!-- Temporary Stop Service Button -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/mainlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tempstopservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/temporary_stop_service"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:backgroundTint="@color/buttonbackground"
        app:cornerRadius="8dp"
        app:icon="@android:drawable/ic_menu_month"
        app:iconGravity="textStart"
        app:iconTint="@color/accessorycolor"
        app:layout_constraintBottom_toTopOf="@id/addresscheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <!-- Address Check Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addresscheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/check_address"
        android:textColor="@color/textColor"
        app:backgroundTint="@color/buttonbackground"
        app:cornerRadius="8dp"
        app:icon="@android:drawable/ic_menu_gallery"
        app:iconGravity="textStart"
        app:iconTint="@color/accessorycolor"
        app:layout_constraintBottom_toTopOf="@id/requestapickup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempstopservice" />

    <!-- Request a Pickup Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/requestapickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/request_a_pickup"
        android:textColor="@color/textColor"
        app:backgroundTint="@color/buttonbackground"
        app:cornerRadius="8dp"
        app:icon="@drawable/delivery_truck"
        app:iconGravity="textStart"
        app:iconTint="@color/accessorycolor"
        app:layout_constraintBottom_toTopOf="@id/stopdelservice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addresscheck" />

    <!-- Stop Delivery Service Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/stopdelservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/stop_delivery_service"
        android:textColor="@color/textColor"
        app:backgroundTint="@color/buttonbackground"
        app:cornerRadius="8dp"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconGravity="textStart"
        app:iconTint="@color/accessorycolor"
        app:layout_constraintBottom_toTopOf="@id/startnew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requestapickup" />

    <!-- Start New Delivery Service Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="170dp"
        android:text="@string/start_new_delivery_service"
        android:textColor="@color/textColor"
        app:backgroundTint="@color/buttonbackground"
        app:cornerRadius="8dp"
        app:icon="@android:drawable/star_on"
        app:iconGravity="textStart"
        app:iconTint="@color/accessorycolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopdelservice" />

</androidx.constraintlayout.widget.ConstraintLayout>
