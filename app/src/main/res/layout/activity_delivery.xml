<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityLiveRegion="polite"
    android:background="#000000"
    android:clickable="true"
    tools:actionBarNavMode="standard">

    <Button
        android:id="@+id/button"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#1D2E2A"
        android:text="@string/delivery_request"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795"
        tools:text="temporarily stop service"
        tools:visibility="visible" />

    <Button
        android:id="@+id/startnew"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#1D2E2A"
        android:text="@string/delivery_request"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676"
        tools:text="start new delivery service"
        tools:visibility="visible" />

    <Button
        android:id="@+id/stopdelservice"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_margin="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#1D2E2A"
        android:layoutDirection="locale"
        android:letterSpacing="0"
        android:lineSpacingExtra="12sp"
        android:lineSpacingMultiplier="1"
        android:lines="1"
        android:linksClickable="true"
        android:longClickable="true"
        android:text="@string/delivery_request"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:barrierDirection="start"
        app:layout_constrainedWidth="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.365"
        app:layout_wrapBehaviorInParent="included"
        tools:text="stop delivery service"
        tools:visibility="visible" />

    <Button
        android:id="@+id/requestapickup"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#1D2E2A"
        android:text="@string/delivery_request"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557"
        tools:text="request a pick-up"
        tools:visibility="visible" />

    <Button
        android:id="@+id/updateorview"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#1D2E2A"
        android:text="@string/delivery_request"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        tools:text="update or view delivery information"
        tools:visibility="visible" />

    <Button
        android:id="@+id/addresscheck"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:autoLink="map"
        android:background="#1D2E2A"
        android:clickable="true"
        android:contextClickable="false"
        android:fitsSystemWindows="true"
        android:text="@string/delivery_request"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315"
        tools:text="check address"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="188dp"
        android:contentDescription="@string/mainlogo"
        app:layout_constraintBottom_toTopOf="@+id/requestapickup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>