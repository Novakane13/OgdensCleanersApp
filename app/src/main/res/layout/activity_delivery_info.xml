<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <EditText
        android:id="@+id/apt_input"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:hint="@string/enter_apartment_number"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/zip_code_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_input"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/zip_code_input"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:hint="@string/enter_zip_code"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/notes_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apt_input"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/address_input"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="2dp"
        android:hint="@string/enter_your_address"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/apt_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/notes_input"
        android:layout_width="335dp"
        android:layout_height="154dp"
        android:layout_margin="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:hint="@string/enter_notes"
        android:inputType="text|textLongMessage|textMultiLine"
        android:singleLine="false"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zip_code_input"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="152dp"
        android:layout_height="62dp"
        android:layout_margin="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="200dp"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes_input" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/address_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
